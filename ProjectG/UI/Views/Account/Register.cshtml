@model UI.Models.RegisterViewModel
@{
  ViewBag.Title = Resources.Resource.RegistrationTitle;
}

<div class="content-wrapper js-content-wrapper content-wrapper_panel-top content-wrapper_rp-min">
  <div class="content-container">
    <div class="content">
      <div>
        @using (Ajax.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, new AjaxOptions
        {
          UpdateTargetId = "mainBody",
          InsertionMode = InsertionMode.Replace
        }, new { @class = "form-horizontal", role = "form" }))
        {
          @Html.AntiForgeryToken()
          @Html.ValidationSummary(true)
          <div class="col-md-offset-2">
            <h4 class="form-header">@Resources.Resource.RegistrationSequence</h4>
          </div>
          <hr />
          <div class="form-group">
            @Html.LabelFor(m => m.Email, Resources.Resource.EmailTitle, new { @class = "col-md-2 form__label" })
            <div class="col-md-6">
              @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
              @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
          </div>
          <div class="form-group">
            @Html.LabelFor(m => m.Password, Resources.Resource.PasswordTitle, new { @class = "col-md-2 form__label" })
            <div class="col-md-6">
              @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
              @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
          </div>
          <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, Resources.Resource.ConfirmPasswordTitle, new { @class = "col-md-2 form__label" })
            <div class="col-md-6">
              @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
              @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
              <input type="submit" class="btn btn-default" value="@Resources.Resource.RegistrationTitle" />
            </div>
          </div>
        }
      </div>
    </div>
  </div>
</div>